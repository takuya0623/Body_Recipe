<div class="container">
<h2><%=@user.username%>さんの会員詳細</h2>
  <div class="row mt-5">
      <table class="table table-borderless">
        <tr class="tr-size">
          <td width="140">会員ID</td> 
          <td><%= @user.id%>
            <% if @user.is_deleted==false %>
              <span class="badge badge-primary">有効会員</span>
            <% else %>
                <span class="badge badge-danger">退会済み</span>
            <% end %>
            </td>
        </tr>
        <tr class="tr-size">
          <td width="140">ユーザー名</td>
          <td><%=@user.username%></td>
        </tr>
        <tr class="tr-size">
          <td width="140">メールアドレス</td>
          <td><%=@user.email%></td>
        </tr>
      </table>
      <%=link_to "編集する",edit_admin_user_path,class: "btn btn-primary mx-3"%>
  </div>
</div>