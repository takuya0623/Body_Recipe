<h4><%= @user.username%>さんの会員情報編集</h4>


<%=form_for @user, url: admin_user_path, method: :patch do|f| %>

  <table class="table table-borderless">

  <tr>
    <td><%=f.label :会員ID %></td>
    <td><%= @user.id %></td>
  </tr>
  <tr>
    <td><%=f.label :ユーザーネーム %></td>
    <td><%= @user.username %></td>
  </tr>
  <tr>
    <td><%=f.label :メールアドレス %></td>
    <td><%= @user.email %></td>
  </tr>
  <tr>
    <td><%= f.label :会員ステータス %></td>
    <td><%= f.radio_button :is_deleted, :false %>
        <%=f.label:有効,class: "is_deleted_label" %>
        <%=f.radio_button :is_deleted, :true %>
        <%=f.label:退会済み,class: "is_deleted_label" %>
    </td>
  </tr>
  </table>
  <%= f.submit "変更を保存する",class: "btn btn-primary"%>
<% end %>