<div class="container">
  <div class="row">
  <div class="col-lg-4">
    <h2 class="mb-5">カロリー一覧</h2>
  </div>
    
        <table class="table table-hover">
          <tr>
            <th>食材</th>
            <th>重量（g）</th>
            <th>Kcal</th>  
            <th>ステータス</th>
          </tr> 
          <% @calories.each do |calorie| %>
            <tr>
              <td><%=calorie.name%></td>      
              <td><%=calorie.weight%>g</td>
              <td><%=calorie.calorie%>Kcal</td>
              <td>
                <% if calorie.is_active ==true %>
                  有効
                <% else %>
                  無効
                <% end %>
              </td>
              <td>
                <%=link_to"編集",edit_admin_calory_path(calorie)%>
                  <%=link_to "削除",admin_calory_path(calorie), method: :delete, data: {confirm: "削除しますか？"} %>
              </td>
            </tr>
          <% end %>                   
        </table> 
    
  </div>
</div>