<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <h2 class>カロリー一覧</h2>
      <p class="mb-5">(五十音順並び）</p>
      </div>
  </div>

<div class="row mb-3 offset-3">
  <p>検索</p>
  <%= form_tag(search_path, method: :get) do %>
    <%= text_field_tag :search, '',:size=>"30x5",placeholder: 'Search'%>
  <% end %>
</div>
  
  <div class="row">
    <div class="col-8 offset-2">      
        <table class="table table-hover">
          <tr>
            <th>食材</th>
            <th>重量（g）</th>
            <th>Kcal</th>  
          </tr> 
          <tr>
            <% @calories.each do |calorie| %>
              <td>
                <%=calorie.name%>
              </td>
              <td>
                <%=calorie.weight%>g
              </td>
              <td>
                <%=calorie.calorie%>Kcal
              </td>
            </tr>
            <% end %>
        </table>
        <%= paginate @calories %>
    </div>    
  </div>
<div class="container">