<div class="container">
  <h1>Recipe 編集</h1>
    <%=link_to "Back",post_path(@post)%>
    <div class="row mt-5">
      <div class="col-lg-12 offset-2">
        
        <% if @post.errors.any? %>
          <%= pluralize(@post.errors.count, "error") %> prohibited this object from being saved: not successfully

          <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        <% end %>

          <%= form_for @post do |f|%>
            <table> 
              <tr class="tr-size">
                <td width="90"><%=f.label :レシピ名 %></td>
                <td width="200"><%=f.text_field :title %></td>
                <td width="90"><%=f.label :"カテゴリー" %></td>
                <td>
                  <%=f.radio_button :is_light, :false %>
                  <%=f.label:増量,class: "is_light_label" %>
                  <%=f.radio_button :is_light, :true %>
                  <%=f.label:減量,class: "is_light_label" %>
                </td>
              </tr>
              
              <tr class="tr-size">
                <td width="90"><%=f.label :カロリー %></td>
                <td><%=f.text_field :calorie %>kcal</td>
              </tr>
    
              <tr class="tr-size">
                <td width="90"><%=f.label :写真 %></td>           
                  <td>
                    <%= attachment_image_tag @post, :image, :fill, 250,200, format: "jpeg", fallback: 'no-image.png', onClick: "$('.img_field').click()", class: "center-block img-thumbnail img-responsive img_prev pull-left profile-img", fallback: "no_image.jpg", :width => "250", :height => "200" %> 
                  <%=f.attachment_field :image, class: 'img_field' %>
                </td>
              </tr>

              <tr class="tr-size">
                <td width="90"><%=f.label :説明 %></td>
                <td><%=f.text_area :body,:size=>"50x10" %></td>
              </tr>

              <tr class="tr-size">
                <td  width="90"><%=f.label :材料 %></td>               
                <td><%=f.text_area :material,:size=>"50x10" %></td>
              </tr>

              <tr class="tr-size">
                <td width="90"><%=f.label :作り方 %></td>
                <td><%=f.text_area :procedure,:size=>"50x10" %></td>
              </tr>           
            </table>
              <div class="col offset-5">
                <%=f.submit "更新", class: "btn btn-primary"%>
              </div>
          <% end %>
      </div>
    </div>
</div>

