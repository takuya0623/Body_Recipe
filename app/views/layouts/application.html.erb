<!DOCTYPE html>
<html>
  <head>
    <title>BodyRecipe</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.1/css/all.css" integrity="sha384-vp86vTRFVJgpjF9jiIGPEEqYqlDwgyBgEF109VFjmqGmIY/Y4HV4d3Gp2irVfcrp" crossorigin="anonymous">
  </head>

  <body>
    <header class= "sticky-top">
      <nav class="nav navbar-nav navbar-left" style="background-color: #FFCC66;">
        <h2 class="title is-4" style="font-family: fantasy;">BodyRecipe</h2>

      <ul class="navbar-expand-lg">
      
      <% if user_signed_in? %>

        <li>
          <%=link_to root_path do %>
            <i class="fas fa-home"></i>Home
          <% end %>
        </li>
        
        <li><%=link_to posts_path do%>
            <i class="far fa-newspaper"></i>投稿一覧
            <%end%>
        </li>
        <li><%=link_to new_post_path do%>
              <i class="fas fa-edit"></i>投稿する
            <% end %>
        </li>      
        <li><%=link_to users_path do %>
              <i class="fas fa-users"></i>シェフ
            <% end %>
        </li>      
        <li><%=link_to user_path(current_user) do %>
              <i class="fas fa-user"></i>マイページ
            <% end %>
        </li>
        <li><%=link_to calories_path do %>
              <i class="fas fa-utensils"></i>カロリー
            <% end %>
        </li>
        <li><%= link_to destroy_user_session_path,method: :delete do %>
              <i class="fas fa-sign-out-alt"></i>ログアウト
            <% end %>
        </li>
      <% elsif admin_admin_signed_in? %>
        <li><%= link_to "食材一覧",admin_calories_path %></li>
        <li><%= link_to "食材登録",new_admin_calory_path %></li>
        <li><%= link_to "会員一覧",admin_users_path %></li>
        <li><%= link_to "ログアウト", destroy_admin_admin_session_path, method: :delete %></li>
      
      <%else%>

      <li>
          <%=link_to root_path do %>
            <i class="fas fa-home"></i>Home
          <% end %>
        </li>

        <li>
          <%=link_to about_path do %>
            <i class="fas fa-link"></i>サイトについて
          <% end %>
        </li>
        <li>
          <%=link_to new_user_session_path  do%>
            <i class="fas fa-sign-in-alt"></i>ログイン
          <% end %>
        </li>
        <li><%=link_to new_user_registration_path do%>
              <i class="fas fa-user-edit"></i>新規登録
            <% end %>
        </li>
      <% end %>
    </ul>
    </nav>
  </header>
  <%= render 'layouts/flashes' %>
  
    <%= yield %>
  
  </body>
</html>
